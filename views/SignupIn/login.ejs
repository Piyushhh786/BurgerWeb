<% layout("/layouts/boilerplate.ejs") -%>

    <body>
        <h3 class="offset-3 navbar-brand mt-4">Login on Burgerr.</h3>
        <form class="needs-validation mt-4 offset-4 col-5" novalidate method="post" action="/user/login">
            <div class="form-group">
                <label for="username">Username </label>
                <input required name="username" type="text" class="form-control " id="username"
                    placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input required name="password" type="password" class="form-control" id="exampleInputPassword1"
                    placeholder="Password">
            </div>
            <div style="display: flex; justify-content: center; flex-direction: column">

                <small style="display: flex; justify-content: center;"><a href="/user/signup">New User(create an
                        account)?click
                        here</a></small>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

        </form>


    </body>