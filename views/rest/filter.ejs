<% layout("./layouts/boilerplate2.ejs") -%>

    <body>

        <form action="/filter" method="post" class="p-4 border rounded">
            <h3 class="navbar-brand mb-3">Filter form</h3>


            <!-- Price Range Filter -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="minPrice" class="form-label">Min Price:</label>
                    <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="0" min="0">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="maxPrice" class="form-label">Max Price:</label>
                    <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="1000" min="0">
                </div>
            </div>

            <!-- Availability Filter -->
            <div class="form-group mb-3">
                <label for="isAvailable" class="form-label">Availability:</label>
                <select id="isAvailable" name="isAvailable" class="form-select">
                    <option value="">Any</option>
                    <option value="true">Available</option>
                    <option value="false">Not Available</option>
                </select>
            </div>

            <!-- Ingredients Filter -->
            <div class="mb-3">
                <label for="ingredients" class="form-label">Ingredients (comma-separated)</label>
                <input type="text" class="form-control" id="ingredients" name="list[ingredients]"
                    placeholder="e.g., Lettuce, Tomato, Cheese">
            </div>

            <!-- Category Filter -->
            <div class="form-group mb-3">
                <label for="category" class="form-label">Category:</label>
                <select id="category" name="category" class="form-select">
                    <option value="">All Categories</option>
                    <option value="beef">Beef</option>
                    <option value="chicken">Chicken</option>
                    <option value="vegetarian">Vegetarian</option>
                    <option value="vegan">Vegan</option>
                    <option value="coldDrink">Cold Drink</option>
                </select>
            </div>

            <!-- Rating Filter -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="minRating" class="form-label">Min Rating:</label>
                    <input type="number" id="minRating" name="minRating" class="form-control" min="0" max="5" step="0.1"
                        placeholder="0">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="maxRating" class="form-label">Max Rating:</label>
                    <input type="number" id="maxRating" name="maxRating" class="form-control" min="0" max="5" step="0.1"
                        placeholder="5">
                </div>
            </div>



            <!-- Submit Button -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Filter <i class="fa-solid fa-filter"></i></button>
            </div>
        </form>
    </body>